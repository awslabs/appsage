{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AppSage.Run/AppSage.Run.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/AppSage.Run/AppSage.Run.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/AppSage.Run/AppSage.Run.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AppSage.Web/AppSage.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/AppSage.Web/AppSage.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/AppSage.Web/AppSage.Web.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "compile-vscode-extension",
            "type": "shell",
            "command": "npm",
            "args": ["run", "compile"],
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "silent",
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/AppSage.VSCodeExtension"
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "watch-vscode-extension",
            "type": "shell",
            "command": "npm",
            "args": ["run", "watch"],
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/AppSage.VSCodeExtension"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "\\b\\B",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)? - File change detected\\. Starting incremental compilation\\.\\.\\.",
                        "endsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)? - Compilation complete\\. Watching for file changes\\."
                    }
                }
            ]
        },
        {
            "label": "install-vscode-extension-deps",
            "type": "shell",
            "command": "npm",
            "args": ["install"],
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/AppSage.VSCodeExtension"
            }
        },
        {
            "label": "release-vscode-extension",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Write-Host 'Starting VS Code Extension Release Process...' -ForegroundColor Green; if (Test-Path 'release') { Write-Host 'Cleaning existing release directory...' -ForegroundColor Yellow; Remove-Item 'release' -Recurse -Force }; Write-Host 'Creating release directory...' -ForegroundColor Yellow; New-Item -ItemType Directory -Path 'release' -Force | Out-Null; Write-Host 'Installing dependencies...' -ForegroundColor Yellow; npm install; Write-Host 'Compiling TypeScript...' -ForegroundColor Yellow; npm run compile; Write-Host 'Packaging extension...' -ForegroundColor Yellow; npx @vscode/vsce package --out release/; Write-Host 'Release complete! VSIX file created in release/ directory.' -ForegroundColor Green; Get-ChildItem release/*.vsix"
            ],
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/AppSage.VSCodeExtension"
            },
            "problemMatcher": []
        },
        {
            "label": "publish-vscode-extension",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Write-Host 'Preparing release directory...' -ForegroundColor Yellow; if (Test-Path 'release') { Remove-Item 'release' -Recurse -Force }; New-Item -ItemType Directory -Path 'release' -Force | Out-Null; Write-Host 'Packaging extension...' -ForegroundColor Yellow; npx @vscode/vsce package --out release/; Write-Host 'Extension packaged successfully!' -ForegroundColor Green; Get-ChildItem release/*.vsix"
            ],
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/AppSage.VSCodeExtension"
            },
            "dependsOn": ["compile-vscode-extension"]
        }
    ]
}