@page
@model AppSage.Web.Pages.Settings.ProfileModel
@{
    ViewData["Title"] = "Profile Settings";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">Profile Settings</h4>
    <button class="btn btn-primary">Save Changes</button>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <div class="position-relative mx-auto mb-3" style="width: 120px;">
                    <div class="avatar avatar-xl bg-primary text-white rounded-circle">JS</div>
                    <div class="position-absolute bottom-0 end-0">
                        <button class="btn btn-sm btn-light rounded-circle shadow-sm border">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </div>
                </div>
                <h5 class="mb-1">John Smith</h5>
                <div class="text-muted mb-3">Project Manager</div>
                <div class="d-grid">
                    <button class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash me-2"></i>Remove Photo
                    </button>
                </div>
            </div>
            <div class="card-footer bg-light p-3">
                <div class="d-flex justify-content-around">
                    <div class="text-center">
                        <div class="fw-bold">24</div>
                        <div class="text-muted small">Projects</div>
                    </div>
                    <div class="text-center">
                        <div class="fw-bold">142</div>
                        <div class="text-muted small">Tasks</div>
                    </div>
                    <div class="text-center">
                        <div class="fw-bold">8</div>
                        <div class="text-muted small">Teams</div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <div>Connected Accounts</div>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <div class="list-group-item py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-google text-danger me-3 fs-4"></i>
                                <div>
                                    <div>Google</div>
                                    <div class="text-muted small">Calendar and Contacts</div>
                                </div>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="googleSwitch" checked>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-microsoft text-info me-3 fs-4"></i>
                                <div>
                                    <div>Microsoft</div>
                                    <div class="text-muted small">Teams and Office 365</div>
                                </div>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="msSwitch" checked>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-slack text-warning me-3 fs-4"></i>
                                <div>
                                    <div>Slack</div>
                                    <div class="text-muted small">Team Communication</div>
                                </div>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="slackSwitch">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <div>Basic Information</div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="firstName" value="John">
                    </div>
                    <div class="col-md-6">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="lastName" value="Smith">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" value="john.smith@appsage.com">
                    </div>
                    <div class="col-md-6">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" value="+1 (555) 123-4567">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="jobTitle" class="form-label">Job Title</label>
                    <input type="text" class="form-control" id="jobTitle" value="Project Manager">
                </div>
                <div class="mb-3">
                    <label for="department" class="form-label">Department</label>
                    <select class="form-select" id="department">
                        <option>Product</option>
                        <option>Marketing</option>
                        <option>Development</option>
                        <option selected>Management</option>
                        <option>Sales</option>
                    </select>
                </div>
                <div class="mb-0">
                    <label for="bio" class="form-label">Bio</label>
                    <textarea class="form-control" id="bio" rows="4">Experienced project manager with 8+ years in software development. Passionate about team collaboration and delivering high-quality products on time.</textarea>
                </div>
            </div>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <div>Notification Settings</div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Email Notifications</label>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="projectUpdates" checked>
                        <label class="form-check-label" for="projectUpdates">
                            Project updates and milestones
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="taskAssignments" checked>
                        <label class="form-check-label" for="taskAssignments">
                            Task assignments and deadlines
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="teamAnnouncements" checked>
                        <label class="form-check-label" for="teamAnnouncements">
                            Team announcements
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="marketingEmails">
                        <label class="form-check-label" for="marketingEmails">
                            Marketing and promotional emails
                        </label>
                    </div>
                </div>
                
                <div class="mb-0">
                    <label class="form-label">Push Notifications</label>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="pushMessages" checked>
                        <label class="form-check-label" for="pushMessages">
                            Direct messages and mentions
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="pushTaskReminders" checked>
                        <label class="form-check-label" for="pushTaskReminders">
                            Task reminders
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="pushUpdates">
                        <label class="form-check-label" for="pushUpdates">
                            Project updates
                        </label>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <div>Change Password</div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="currentPassword" class="form-label">Current Password</label>
                    <input type="password" class="form-control" id="currentPassword">
                </div>
                <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input type="password" class="form-control" id="newPassword">
                </div>
                <div class="mb-4">
                    <label for="confirmPassword" class="form-label">Confirm New Password</label>
                    <input type="password" class="form-control" id="confirmPassword">
                </div>
                <div>
                    <button class="btn btn-primary">Update Password</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
    }
    
    .avatar-xl {
        width: 120px;
        height: 120px;
        font-size: 2.5rem;
    }
</style>