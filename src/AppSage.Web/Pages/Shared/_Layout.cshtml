                <div><i class="bi bi-arrow-up-right-circle"></i> Modernization</div>
                <i class="bi bi-chevron-right submenu-icon"></i>
            </a>
            <div class="nav-submenu" id="modernization-submenu">

            </div>
            
 

            <!-- AWS Programs Reports (with submenu) -->
            <a href="javascript:void(0)" class="nav-link has-submenu" data-submenu="awsprograms">
                <div><i class="bi bi-collection"></i> AWS Programs</div>
                <i class="bi bi-chevron-right submenu-icon"></i>
            </a>
            <div class="nav-submenu" id="awsprograms-submenu">

                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/AWSPrograms/MAP/Index" ? "active" : "")" asp-page="/Reports/AWSPrograms/MAP/Index">
                    <i class="bi bi-compass"></i> MAP
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/AWSPrograms/ModFastTrack/Index" ? "active" : "")" asp-page="/Reports/AWSPrograms/ModFastTrack/Index">
                    <i class="bi bi-rocket-takeoff"></i> ModFast Track
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/AWSPrograms/OLA/Index" ? "active" : "")" asp-page="/Reports/AWSPrograms/OLA/Index">
                    <i class="bi bi-speedometer2"></i> OLA
                </a>
            </div>
        </div>
        
        <div class="nav-section">
            <div class="nav-section-title">SETTINGS</div>
            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Settings/Profile" ? "active" : "")" asp-page="/Settings/Profile">
                <i class="bi bi-person"></i> Profile
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Settings/Account" ? "active" : "")" asp-page="/Settings/Account">
                <i class="bi bi-gear"></i> Account
            </a>

            <div class="nav-section-title">Extensions</div>
            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Exetnsions/Index" ? "active" : "")" asp-page="/Extensions/Index">
                <i class="bi bi-person"></i> Marketplace
            </a>
        </div>
    </nav>
    
    <!-- Topbar -->
    <div class="topbar">
        <div>
             @await RenderSectionAsync("Filters", required: false)
        </div>
        <div class="user-profile dropdown">
            <div class="user-avatar">JS</div>
            <div class="user-info d-none d-md-block">
                <div class="user-name">John Smith</div>
            </div>
            <i class="bi bi-chevron-down ms-2"></i>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        <div class="page-content">
            @RenderBody()
        </div>
    </div>

    <footer class="footer text-muted">
        <div class="container-fluid">
            &copy; 2025 - AppSage - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Toggle sidebar on mobile
        document.addEventListener('DOMContentLoaded', function() {
            const toggleSidebar = () => {
                document.querySelector('.sidebar').classList.toggle('show');
            };
            
            // Add event listener to toggle button if it exists
            const toggleButton = document.querySelector('.navbar-toggler');
            if (toggleButton) {
                toggleButton.addEventListener('click', toggleSidebar);
            }
            
            // Handle submenu toggles
            const submenuToggles = document.querySelectorAll('.nav-link.has-submenu');
            submenuToggles.forEach(toggle => {
                const submenuId = toggle.getAttribute('data-submenu') + '-submenu';
                const submenu = document.getElementById(submenuId);
                
                if (submenu) {
                    // Check if any child link is active and open the submenu
                    const hasActiveChild = submenu.querySelector('.nav-link.active');
                    if (hasActiveChild) {
                        submenu.classList.add('show');
                        toggle.classList.add('expanded');
                    }
                    
                    toggle.addEventListener('click', function() {
                        const isExpanded = submenu.classList.contains('show');
                        
                        // Close all other submenus
                        document.querySelectorAll('.nav-submenu.show').forEach(menu => {
                            menu.classList.remove('show');
                        });
                        document.querySelectorAll('.nav-link.has-submenu.expanded').forEach(link => {
                            link.classList.remove('expanded');
                        });
                        
                        // Toggle current submenu
                        if (!isExpanded) {
                            submenu.classList.add('show');
                            toggle.classList.add('expanded');
                        }
                    });
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>