                <div><i class="bi bi-filetype-cs"></i> .NET</div>
                <i class="bi bi-chevron-right submenu-icon"></i>
            </a>
            <div class="nav-submenu" id="dotnet-submenu">
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/DotNet/SolutionAnalysis/Index" ? "active" : "")" asp-page="/Reports/DotNet/SolutionAnalysis/Index">
                    <i class="bi bi-search"></i> Solution Analysis
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/DotNet/GraphAnalysis/Index" ? "active" : "")" asp-page="/Reports/DotNet/GraphAnalysis/Index">
                    <i class="bi bi-search"></i> Graph Analysis
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/DotNet/DependencyAnalysis/Index" ? "active" : "")" asp-page="/Reports/DotNet/DependencyAnalysis/Index">
                    <i class="bi bi-diagram-3"></i> Dependency Analysis
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/DotNet/PackageAnalysis/Index" ? "active" : "")" asp-page="/Reports/DotNet/PackageAnalysis/Index">
                    <i class="bi bi-box-seam"></i> Package Analysis
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/DotNet/PurposeAnalysis/Index" ? "active" : "")" asp-page="/Reports/DotNet/PurposeAnalysis/Index">
                    <i class="bi bi-flag"></i> Purpose Analysis
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/DotNet/LayerAnalysis/Index" ? "active" : "")" asp-page="/Reports/DotNet/LayerAnalysis/Index">
                    <i class="bi bi-layers"></i> Layer Analysis
                </a>
            </div>
            
            <!-- Java Reports (with submenu) -->
            <a href="javascript:void(0)" class="nav-link has-submenu" data-submenu="java">
                <div><i class="bi bi-cup-hot"></i> Java</div>
                <i class="bi bi-chevron-right submenu-icon"></i>
            </a>
            <div class="nav-submenu" id="java-submenu">
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/Java/SolutionAnalysis/Index" ? "active" : "")" asp-page="/Reports/Java/SolutionAnalysis/Index">
                    <i class="bi bi-search"></i> Solution Analysis
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/Java/DependencyAnalysis/Index" ? "active" : "")" asp-page="/Reports/Java/DependencyAnalysis/Index">
                    <i class="bi bi-diagram-3"></i> Dependency Analysis
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/Java/PackageAnalysis/Index" ? "active" : "")" asp-page="/Reports/Java/PackageAnalysis/Index">
                    <i class="bi bi-box"></i> Package Analysis
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/Java/PurposeAnalysis/Index" ? "active" : "")" asp-page="/Reports/Java/PurposeAnalysis/Index">
                    <i class="bi bi-flag"></i> Purpose Analysis
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/Java/LayerAnalysis/Index" ? "active" : "")" asp-page="/Reports/Java/LayerAnalysis/Index">
                    <i class="bi bi-layers"></i> Layer Analysis
                </a>
            </div>

            <!-- Database Reports (with submenu) -->
            <a href="javascript:void(0)" class="nav-link has-submenu" data-submenu="database">
                <div><i class="bi bi-database"></i> Databases</div>
                <i class="bi bi-chevron-right submenu-icon"></i>
            </a>
            <div class="nav-submenu" id="database-submenu">
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/Database/MSSQLAnalysis/Index" ? "active" : "")" asp-page="/Reports/Database/MSSQLAnalysis/Index">
                    <i class="bi bi-server"></i> MS SQL Server Analysis
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/Database/PostgresAnalysis/Index" ? "active" : "")" asp-page="/Reports/Database/PostgresAnalysis/Index">
                    <i class="bi bi-database-gear"></i> Postgres Analysis
                </a>
            </div>
            
            <!-- Python Reports (with submenu) -->
            <a href="javascript:void(0)" class="nav-link has-submenu" data-submenu="python">
                <div><i class="bi bi-file-earmark-code"></i> Python</div>
                <i class="bi bi-chevron-right submenu-icon"></i>
            </a>
            <div class="nav-submenu" id="python-submenu">
           
            </div>
            
            <!-- JavaScript/Node Reports (with submenu) -->
            <a href="javascript:void(0)" class="nav-link has-submenu" data-submenu="javascript">
                <div><i class="bi bi-filetype-js"></i> JavaScript</div>
                <i class="bi bi-chevron-right submenu-icon"></i>
            </a>
            <div class="nav-submenu" id="javascript-submenu">
             
            </div>
               
            <!-- Security Reports (with submenu) -->
            <a href="javascript:void(0)" class="nav-link has-submenu" data-submenu="security">
                <div><i class="bi bi-shield-lock"></i> Security</div>
                <i class="bi bi-chevron-right submenu-icon"></i>
            </a>
