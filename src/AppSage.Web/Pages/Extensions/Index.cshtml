@page
@model AppSage.Web.Pages.Extensions.IndexModel
@{
    ViewData["Title"] = "Extension Marketplace";
}

<style>
    .extension-card {
        border: 1px solid #e3e6f0;
        border-radius: 12px;
        transition: all 0.3s ease;
        height: 100%;
        background: #fff;
    }
    
    .extension-card:hover {
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transform: translateY(-2px);
        border-color: #5a67d8;
    }
    
    .extension-icon {
        width: 48px;
        height: 48px;
        color: #5a67d8;
        background: #f7fafc;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .extension-stats {
        font-size: 0.875rem;
        color: #6c757d;
    }
    
    .rating-stars {
        color: #ffc107;
    }
    
    .category-badge {
        background: #e3f2fd;
        color: #1976d2;
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        border-radius: 12px;
        font-weight: 500;
    }
    
    .search-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 12px;
        margin-bottom: 2rem;
    }
    
    .search-input {
        border: none;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }
    
    .search-input:focus {
        box-shadow: 0 0 0 3px rgba(255,255,255,0.3);
        outline: none;
    }
    
    .btn-search {
        background: rgba(255,255,255,0.2);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
    }
    
    .btn-search:hover {
        background: rgba(255,255,255,0.3);
        color: white;
    }
    
    .filter-btn {
        border: 1px solid #dee2e6;
        background: white;
        color: #495057;
        border-radius: 6px;
        padding: 0.5rem 1rem;
        margin: 0.25rem;
        transition: all 0.2s;
    }
    
    .filter-btn.active {
        background: #5a67d8;
        color: white;
        border-color: #5a67d8;
    }
    
    .filter-btn:hover {
        background: #f8f9fa;
        border-color: #5a67d8;
    }
    
    .installations-count {
        color: #28a745;
        font-weight: 600;
    }
    
    .runs-count {
        color: #17a2b8;
        font-weight: 600;
    }
</style>

<div class="container-fluid py-4">
    <!-- Search Section -->
    <div class="search-section p-4 mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-3">Extension Marketplace</h1>
                <p class="mb-4">Discover powerful extensions to enhance your application analysis capabilities</p>
                
                <form method="get" class="d-flex gap-3">
                    <input type="text" name="search" value="@Model.SearchQuery" 
                           class="form-control search-input flex-grow-1" 
                           placeholder="Search extensions..." />
                    <input type="hidden" name="category" value="@Model.SelectedCategory" />
                    <button type="submit" class="btn btn-search">
                        <i class="fas fa-search me-2"></i>Search
                    </button>
                </form>
            </div>
            <div class="col-md-4 text-center">
                <div class="d-flex align-items-center justify-content-center">
                    <div class="extension-icon me-3" style="width: 64px; height: 64px; background: rgba(255,255,255,0.2);">
                        <svg viewBox="0 0 24 24" fill="currentColor" style="width: 32px; height: 32px;">
                            <path d="M20.5,11H19V7C19,5.89 18.1,5 17,5H13V3.5A2.5,2.5 0 0,0 10.5,1A2.5,2.5 0 0,0 8,3.5V5H4C2.89,5 2,5.89 2,7V10.8H3.5C5,10.8 6.2,12 6.2,13.5C6.2,15 5,16.2 3.5,16.2H2V20C2,21.11 2.89,22 4,22H7.8V20.5C7.8,19 9,17.8 10.5,17.8C12,17.8 13.2,19 13.2,20.5V22H17C18.11,22 19,21.11 19,20V16H20.5A2.5,2.5 0 0,0 23,13.5A2.5,2.5 0 0,0 20.5,11Z"/>
                        </svg>
                    </div>
                    <div>
                        <h4 class="mb-0">@Model.Extensions.Count</h4>
                        <small>Extensions Available</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Filters -->
    <div class="mb-4">
        <h5 class="mb-3">Categories</h5>
        <div class="d-flex flex-wrap">
            @foreach (var category in Model.GetCategories())
            {
                <a href="?search=@Model.SearchQuery&category=@category" 
                   class="filter-btn @(Model.SelectedCategory == category ? "active" : "")">
                    @category
                </a>
            }
        </div>
    </div>

    <!-- Extensions Grid -->
    <div class="row">
        @foreach (var extension in Model.Extensions)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card extension-card">
                    <div class="card-body p-4">
                        <!-- Header -->
                        <div class="d-flex align-items-start mb-3">
                            <div class="extension-icon me-3">
                                @Html.Raw(extension.IconSvg)
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">@extension.Name</h5>
                                <p class="text-muted mb-0 small">by @extension.Company</p>
                                <span class="category-badge">@extension.Category</span>
                            </div>
                        </div>

                        <!-- Description -->
                        <p class="card-text text-muted mb-3" style="font-size: 0.9rem; line-height: 1.4;">
                            @extension.Description
                        </p>

                        <!-- Rating -->
                        <div class="d-flex align-items-center mb-3">
                            <div class="rating-stars me-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Floor(extension.Rating))
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    else if (i <= extension.Rating)
                                    {
                                        <i class="fas fa-star-half-alt"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star"></i>
                                    }
                                }
                            </div>
                            <span class="fw-bold">@extension.Rating.ToString("F1")</span>
                        </div>

                        <!-- Stats -->
                        <div class="row extension-stats mb-3">
                            <div class="col-6">
                                <i class="fas fa-download me-1"></i>
                                <span class="installations-count">@extension.Installations.ToString("N0")</span>
                                <small class="d-block">installations</small>
                            </div>
                            <div class="col-6">
                                <i class="fas fa-play me-1"></i>
                                <span class="runs-count">@extension.Runs.ToString("N0")</span>
                                <small class="d-block">runs</small>
                            </div>
                        </div>

                        <!-- Version and Date -->
                        <div class="d-flex justify-content-between align-items-center extension-stats">
                            <small>
                                <i class="fas fa-tag me-1"></i>
                                v@extension.Version
                            </small>
                            <small>
                                <i class="fas fa-clock me-1"></i>
                                @extension.LastUpdated.ToString("MMM dd")
                            </small>
                        </div>
                    </div>
                    
                    <!-- Footer -->
                    <div class="card-footer bg-transparent border-top-0 pt-0 pb-3 px-4">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button class="btn btn-outline-primary btn-sm flex-grow-1">
                                <i class="fas fa-info-circle me-1"></i>Details
                            </button>
                            <button class="btn btn-primary btn-sm flex-grow-1">
                                <i class="fas fa-download me-1"></i>Install
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Extensions.Any())
    {
        <div class="text-center py-5">
            <div class="extension-icon mx-auto mb-3" style="width: 80px; height: 80px; color: #6c757d;">
                <svg viewBox="0 0 24 24" fill="currentColor" style="width: 40px; height: 40px;">
                    <path d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
                </svg>
            </div>
            <h4 class="text-muted">No extensions found</h4>
            <p class="text-muted">Try adjusting your search criteria or browse different categories.</p>
            <a href="?" class="btn btn-primary">
                <i class="fas fa-refresh me-1"></i>Show All Extensions
            </a>
        </div>
    }
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="~/lib/font-awesome/all.min.css" />
