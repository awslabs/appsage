@page
@model IndexModel
@{
    ViewData["Title"] = "AppSage - Code Analysis & Modernization Insights";
}
@using AppSage.Core.Metric;
@using AppSage.Web.Extensions;

<!-- Hero Section -->
<div class="hero-section bg-gradient-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">
                    <span class="text-primary-light">AppSage</span>
                    <br>Code Intelligence Platform
                </h1>
                <p class="lead mb-4">
                    Transform your codebase analysis with comprehensive insights. AppSage helps you understand complexity, 
                    identify technical debt, and plan modernization efforts with data-driven precision.
                </p>
                <div class="d-flex gap-3 mb-4">
                    <a href="/Reports" class="btn btn-light btn-lg px-4">
                        <i class="bi bi-graph-up me-2"></i>View Reports
                    </a>
                    <a href="/Analysis" class="btn btn-outline-light btn-lg px-4">
                        <i class="bi bi-play-circle me-2"></i>Start Analysis
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-illustration">
                    <i class="bi bi-code-slash display-1 text-primary-light opacity-75"></i>
                    <div class="mt-3">
                        <i class="bi bi-arrow-right mx-3 text-white-50"></i>
                    </div>
                    <i class="bi bi-graph-up-arrow display-1 text-success opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="h1 mb-3">Comprehensive Code Analysis</h2>
            <p class="lead text-muted">
                Get deep insights into your codebase with our advanced analysis tools
            </p>
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-speedometer2 text-primary fs-1"></i>
                    </div>
                    <h5 class="card-title">Complexity Metrics</h5>
                    <p class="card-text text-muted">
                        Measure cyclomatic complexity, maintainability index, and other key metrics to understand code quality.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-exclamation-triangle text-warning fs-1"></i>
                    </div>
                    <h5 class="card-title">Technical Debt Detection</h5>
                    <p class="card-text text-muted">
                        Identify code smells, anti-patterns, and technical debt to prioritize refactoring efforts.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-diagram-3 text-success fs-1"></i>
                    </div>
                    <h5 class="card-title">Dependency Mapping</h5>
                    <p class="card-text text-muted">
                        Visualize code dependencies and relationships to understand system architecture and coupling.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Overview -->
<div class="bg-light py-5 mb-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-5 fw-bold text-primary mb-1">8652</h3>
                    <p class="text-muted mb-0">Repositories Analyzed</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-5 fw-bold text-success mb-1">30M</h3>
                    <p class="text-muted mb-0">Lines of Code</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-5 fw-bold text-warning mb-1">130M</h3>
                    <p class="text-muted mb-0">Datapoints & Metrics Identified</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-5 fw-bold text-info mb-1">28M</h3>
                    <p class="text-muted mb-0">Files Processed</p>
                </div>
            </div>
        </div>
    </div>
</div> 

<!-- Getting Started Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <h2 class="h1 mb-4">Ready to Analyze Your Code?</h2>
            <p class="lead text-muted mb-4">
                Start your journey towards better code quality and reduced technical debt. 
                AppSage supports modern and legacy codebases across multiple programming languages.
            </p>
            <div class="d-flex justify-content-center gap-3">
                <a href="/Upload" class="btn btn-primary btn-lg px-4">
                    <i class="bi bi-upload me-2"></i>Upload Repository
                </a>
                <a href="/Documentation" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-book me-2"></i>View Documentation
                </a>
            </div>
        </div>
    </div>
</div>

<style>
.hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="50" height="50" patternUnits="userSpaceOnUse"><path d="M 50 0 L 0 0 0 50" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)" /></svg>');
}

.hero-section .container {
    position: relative;
    z-index: 1;
}

.text-primary-light {
    color: #a8b5f0 !important;
}

.min-vh-50 {
    min-height: 50vh;
}

.hero-illustration {
    animation: heroFloat 3s ease-in-out infinite;
}

@@keyframes heroFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
}

.feature-icon {
    transition: transform 0.3s ease;
}

.card:hover .feature-icon {
    transform: scale(1.1);
}

.stat-item {
    padding: 1rem;
}

.bg-gradient-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}
</style>